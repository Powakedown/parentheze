 <div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox-bottom white-on-purple" style="background-image: url(<%= t('.image') %>)" id="slide<%= id %>">
    <div class="slide<%= id %>">
      <h1 class=""><%= t('.title') %></h1>
      <h4 class="margin-bottom-medium"><%= t('.text') %></h4>
      <% if @session_ways %>
        <% if current_user && current_user.validation == 0 %>
          <div class="btn btn-yellow margin-bottom-medium"><%= t('.after_subscription') %></div>
        <% elsif current_user && current_user.validation == 1 %>
          <div class="btn btn-yellow margin-bottom-medium"><%= t('.validated') %></div>
        <% else %>
          <%= link_to t('.calltoaction'), new_user_registration_path, class: "btn btn-blue margin-bottom-medium" %>
        <% end %>
      <% else %>
        <div class="row margin-bottom-medium">
          <div class="col-xs-12 col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
            <%= render 'shared/field_with_button', query: "guest",
                                                   url: guest_path(@guest),
                                                   subquery: :email,
                                                   placeholder: t('commons.placeholder.email'),
                                                   btn_text: t('commons.register_beta'),
                                                   method: "patch",
                                                   label: t('.text2') %>
          </div>
        </div>
      <% end %>

      <div class="margin-bottom-medium">
        <% if t('.link_image') %>
          <%= render 'scroller', target_page: target_page, link_image: t('.link_image') %>
        <% else %>
          <%= link_to t('.button_text'), "#"<<target_page , class:"btn btn-yellow flexbox btn-large center scroll" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
