 <div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox" style="background-image: url(<%= slide[:image] %>)" id="slide<%= id %>">
    <div class="slide<%= id %>">
      <h1 class=""><%= slide[:title] %></h1>
      <p class="margin-bottom-medium"><%= slide[:text] %></p>
      <% unless current_page?(root_path) && @session_ways %>
        <% unless current_user %>
          <%= link_to t(slide[:calltoaction]), new_user_registration_path, class: "btn btn-blue margin-bottom-medium" %>
        <% else %>
          <div class="btn btn-yellow margin-bottom-medium"><%= slide[:after_subscription] %></div>
        <% end %>
      <% else current_page?(root_path) %>
        <p class="margin-bottom-medium"><%= slide[:text2] %></p>
        <div class="row margin-bottom-medium">
          <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1 col-lg-6 col-lg-offset-3">
            <%= render 'shared/field_with_button', query: "guest", url: guest_path(@guest), subquery: :email, placeholder: t('commons.placeholder.email'), btn_text: t('commons.register_beta'), method: "patch"  %>
          </div>
        </div>
      <% end %>

      <div class="margin-bottom-medium">
        <% if slide[:link_image] %>
          <%= render 'scroller', target_page: target_page, link_image: slide[:link_image] %>
        <% else %>
          <%= link_to slide[:button_text], "#"<<target_page , class:"btn btn-yellow flexbox btn-large center scroll" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
