<% content_for :title_tag do t('metas.titles.home') end %>

<div class="home">

  <%= render "slide", target_page: "slide1", id: "slide0" ,  title: t('home.slides.slide0'+'.title'), text: t('home.slides.slide0'+'.text'), image: t('home.slides.slide0'+'.image'), link_image: t('home.slides.slide0.link_image') %>

  <%= render 'pages/slide_with_split', image: t('home.slide_with_split.image'), title: t('home.slide_with_split.title'), text: t('home.slide_with_split.text'), id: "slide1", target_page: "slide2", link_image: t('home.slide_with_split.link_image') %>

  <div class="minfullscreen relative flex-column text-center padding-box slide_plan" id="slide2" >
    <h2><%= t('home.slide_plan.title') %></h2>
    <h4 class="yellow"><%= t('home.slide_plan.text') %></h4>
    <div class="margin-bottom-medium">
      <div class="row">
        <% t('plans').length.times do |x| %>
          <% xstring = x.to_s %>
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 padding-box">
            <div class="plan-card flex-column between padding-box <%= "emergency" if x == t('plans').length - 1 %>">
              <div>
                <h1 style="color: <%= t('plans.plan'+xstring+'.color') %>"><%= t('plans.plan'+xstring+".price") %></h1>
                <h3><%= t('plans.plan'+xstring+".title") %></h3>
              </div>
              <p><%= t('plans.plan'+xstring+".subtitle") %></p>
            </div>
          </div>
        <% end %>

      </div>
    </div>
    <%= render 'shared/scroller', target_page: "slide3", link_image: t('home.slides.slide0.link_image'), step: 5 %>
  </div>

  <div class="fullscreen relative center text-center slide_plan black-on-white" id="slide3">
    <div class="row">
      <div style="background-image: url(<%= t('home.slide_detail.image') %>)" class="full-height col-xs-12 col-md-6"></div>
      <div class="full-height col-xs-12 col-md-6 flex-column black-on-white double-padding-box">
        <div>
          <h1><%= t('home.slide_detail.title') %></h1>
          <div class="flex-column between padding-box text-left">
            <ul>
              <% t('home.slide_detail.labels').each do |label| %>
                <li><h4><%= label[1] %></h4></li>
              <% end %>
            </ul>
          </div>
          <%= render 'shared/scroller', target_page: "inscription-beta", link_image: t('home.slide_with_split.link_image') %>
        </div>
      </div>
    </div>
  </div>

  <div class="fullscreen relative flex-column center text-center" id="inscription-beta" >
    <div class="container">
      <h1><%= t('home.slide_calltoaction.title') %></h1>
      <p class="margin-bottom-medium"><%= t('home.slide_calltoaction.text') %></p>
      <div class="inscription-wrapper center margin-bottom-medium">
        <%= simple_form_for :guest, url: guest_path(@guest), method: :patch do |f| %>
          <p class=" margin-bottom-medium">
           <label class="checkbox">
             <input type="checkbox" class="boolean optional" checked="checked" id="bordelais" name="guest[bordelais]" value="1" />
             <label for="bordelais">Vous habitez la m√©tropole bordelaise ou proche.</label>
           </label>
          </p>
          <%= f.input :email, label: false, placeholder: t('placeholder.email') %>
          <%= f.button :submit, value: t('commons.register'), data: { disable_with: "" } %>
        <% end %>
      </div>
      <%= render 'shared/scroller', target_page: "slide0", link_image: t('home.slide_calltoaction.link_image'), step: 6 %>
    </div>
  </div>
</div>
