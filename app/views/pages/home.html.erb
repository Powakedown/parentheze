<% content_for :title_tag do t('metas.titles.home') end %>

<div class="home">

  <%= render partial: "slide", locals: { slide: @slides.values[0], index: 0, target_page: "slide1" } %>

  <%= render partial:'slide_with_split', locals: { slide: @slide_shows.values[0], index: 1, target_page: "slide2" } %>

  <div class="container-fluid minfullscreen flex-column text-center double-padding-box slide-plan" id="slide2">
    <h2><%= @slide_plan[:title] %></h2>
    <h4 class="yellow"><%= t('home.slide_plan.text') %></h4>
    <div class="margin-bottom-medium">
      <div class="row plans">
        <% @slide_plan[:plans].each do |plan| %>
          <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 padding-box">
            <div class="plan-card flex-column flex-between padding-box <%= "emergency" if plan[0] == :plan3  %>">
              <div>
                <h1 style="color: <%= plan[1][:color] %>"><%= plan[1][:price] %></h1>
                <h3><%= plan[1][:title] %></h3>
              </div>
              <p><%= plan[1][:subtitle] %></p>
            </div>
          </div>
        <% end %>

      </div>
    </div>
    <%= render 'shared/scroller', target_page: "slide3", link_image: t('home.slides.slide0.link_image') %>
  </div>

  <%= render partial:'slide_with_split', locals: { slide: @slide_shows.values[1], index: 3, target_page: "inscription-beta" } %>

  <div class="container-fluid full-height flexbox text-center" id="inscription-beta" >
    <div class="container">
      <h1><%= @slide_subscribe[:title] %></h1>
      <p class="margin-bottom-medium"><%= @slide_subscribe[:text] %></p>
      <div class="inscription-wrapper center margin-bottom-medium">
        <%= simple_form_for :guest, url: guest_path(@guest), method: :patch do |f| %>
          <p class=" margin-bottom-medium">
           <label class="checkbox">
             <input type="checkbox" class="boolean optional" checked="checked" id="bordelais" name="guest[bordelais]" value="1" />
             <label for="bordelais">Vous habitez la m√©tropole bordelaise ou proche.</label>
           </label>
          </p>
          <%= f.input :email, label: false, placeholder: t('placeholder.email') %>
          <%= f.button :submit, value: t('commons.register'), data: { disable_with: "" } %>
        <% end %>
      </div>
      <%= render 'shared/scroller', target_page: "slide0", link_image: @slide_subscribe[:link_image], step: 6 %>
    </div>
  </div>
</div>
