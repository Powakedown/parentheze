<div class="col-12 col-md-8 col-lg-8 col-xl-9">
  <div class="row">
    <div class="col-12">
      <h5><%= t('.column-title') %></h5>
    </div>
    <div class="col-12">
      <div class="page-wrapper black-on-white margin-bottom-big relative">
        <%= render "shared/button_close" %>
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h3><%= t('.title') %></h3>
            </div>
            <div class="col-12">
              <p><%= t('.subtitle') %></p>
            </div>
            <%= render "shared/mini_form", path: add_friend_path, placeholder: "email(s)", value: session[:emails], btn_text: t('.btn_text') %>
          </div>
        </div>
      </div>
      <div class="full-width">
        <h4><%= t('.preview') %></h4>
        <div class="mailer-preview">
          <%= render "add_friend_preview" %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>

<%= content_for :after_js do %>
  <script>
    var emailField = document.getElementById('message_comment');

    if (emailField) {
      emailField.addEventListener("keydown", testMail, false);
    }
  </script>
<% end %>
