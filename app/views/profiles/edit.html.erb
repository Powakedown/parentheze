<% content_for :title_tag do t('.new-profile') end %>


<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox text-left" style="background-image: linear-gradient(0deg, rgba(10,10,10,0.5) 0%, rgba(10,10,10,0.5) 100%), url(<%= t('.image') %>)">
    <div class="parentheze-login">
      <% if @step < 6 %>
      <h4><%= t('.title') %></h4>
        <div class="breadcrumb">
          <div class="center flex-line">
            <% (1..5).each do |x| %>
              <div class="step flexbox <%= "active" if x == @step %>"><%= x %></div>
            <% end %>
          </div>
        </div>
      <% end %>

      <% %w(2 3 4 5 6).each do |step| %>
        <% if @step == step.to_i %>
          <div class="login-box <%= "expandOpen" if step == "6" %>" style="background-image: url(<%= t('.card-image') if step == "6" %>)">
            <%= render 'form'<<step, step: step %>
          </div>
        <% end %>
      <% end %>

    </div>
  </div>
</div>

