<div class="col-12 col-md-8 col-lg-8 col-xl-9">
  <div class="row">
    <div class="col-12">
      <h5><%= t('.column2-title') %></h5>
    </div>
    <% @profiles.each do |profile| %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= render "shared/profile_card", profile: profile, reputation: "Bonne réputation", distance: "200 mètres" %>
      </div>
    <% end %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= render "shared/profile_card_invitation" %>
      </div>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= render "shared/profile_card_school" %>
      </div>
    <% 3.times do %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
        <%= render "shared/profile_card_empty" %>
      </div>
    <% end %>
  </div>
</div>
