<% content_for(:title_tag) { t('.title') } %>

<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox text-left" style="background-image: linear-gradient(0deg, rgba(10,10,10,0.5) 0%, rgba(10,10,10,0.5) 100%), url(<%= t('.image') %>)">

    <div class="parentheze-login">
      <%= render 'shared/sign_out_button' %>
      <h4><%= t('.maintitle') %></h4>
      <%= render "shared/breadcrumb", step: 1, length: 5 %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="login-box">
          <h3><%= t('.cardtitle') %></h3>
          <p><%= t('.details') %></p>
          <%= f.input :email, required: true, autofocus: true, label: t('.field1'), input_html: {value: session[:email] || "" } %>
          <%= f.input :password, required: true, label: t('.field2') %>
          <%= f.input :password_confirmation, required: true, label: t('.field3') %>
          <div class="form-actions">
            <%= f.button :submit, t('commons.button.next'), class:"margin-bottom-small" %>
            <p class="text-center"><%= link_to t('.addon'), new_user_session_path %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



