<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox text-left" style="background-image: linear-gradient(0deg, rgba(10,10,10,0.5) 0%, rgba(10,10,10,0.5) 100%), url(<%= t('.image') %>)">

    <div class="parentheze-login">
      <%= render 'shared/sign_out_button' %>
      <h4><%= t('.title') %></h4>
      <% if @user.validation != 1 %>
        <%= render "shared/breadcrumb", step: 1, length: 5 %>
      <% end %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="login-box">
          <div class="login-fields-tall">
            <h3><%= t('.cardtitle') %></h3>
            <p><%= t('.details') %></p>

            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>
                <%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %>
              </p>
            <% end %>
            <%= f.input :current_password, required: true, label: t('.field6'), placeholder: t('.placeholder1') %>

            <%= f.input :password, autocomplete: "off", required: false, label: t('.field4'), placeholder: t('.placeholder2') %>
            <%= f.input :password_confirmation, required: false, label: t('.field5'), placeholder: t('.placeholder2') %>
          </div>
          <div class="form-actions text-center">
            <%= f.button :submit, t('commons.button.next'), class:"margin-bottom-small" %>
            <% if @user.step == 10 %>
              <p><%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete, class:"red" %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>



