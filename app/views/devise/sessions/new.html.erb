<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox text-left" style="background-image: url(<%= t('inscription.image') %>)">
    <div class="parentheze-login">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="login-box">
          <div class="login-fields-small">
            <h3><%= t('devise.sessions.new.sign_in') %></h3>

            <%= f.input :email, required: false, autofocus: true, label: t('.field1') %>
            <%= f.input :password, required: false, label: t('.field7') %>
            <label class="checkbox margin-bottom-medium">
              <input value="0" type="hidden" name="user[remember_me]">
              <input type="checkbox" class="boolean optional" checked="checked" id="user_remember_me" name="user[remember_me]" value="1" />
              <label for="user_remember_me"><%= t('.remember_me') %></label>
            </label>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, t('.sign_in'), class:"margin-bottom-small" %>
            <p><%= render "devise/shared/links" %></p>
          </div>

        </div>
      <% end %>
    </div>
  </div>
</div>
