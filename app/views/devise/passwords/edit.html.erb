<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox text-left" style="background-image: linear-gradient(0deg, rgba(10,10,10,0.5) 0%, rgba(10,10,10,0.5) 100%), url(<%= t('profiles.shared.inscription-bg') %>)">
    <div class="parentheze-login">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="login-box">
          <div class="login-fields-small">
            <h3><%= t(".change_your_password") %></h3>

            <%= f.input :email, required: true, autofocus: true, label: t('.label1') %>
            <%= f.input :reset_password_token, as: :hidden %>
            <%= f.full_error :reset_password_token %>
          </div>

          <div class="form-inputs">
            <%= f.input :password, label: t(".new_password"), required: true, autofocus: true %>
            <%= f.input :password_confirmation, label: t(".confirm_new_password"), required: true %>
          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, t(".change_my_password"), class:"margin-bottom-small" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
