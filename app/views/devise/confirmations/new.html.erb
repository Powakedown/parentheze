<div class="flex-parent"> <!-- for IE bug -->
  <div class="fullscreen relative flexbox text-left" style="background-image: linear-gradient(0deg, rgba(10,10,10,0.5) 0%, rgba(10,10,10,0.5) 100%), url(<%= t('profiles.shared.inscription-bg') %>)">
    <div class="parentheze-login">
      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :confirmation_token %>
        <div class="login-box">
          <div class="login-fields-small">
            <h3><%= t(".resend_confirmation_instructions") %></h3>

            <%= f.input :email, required: true, autofocus: true, label: t('.label') %>

          </div>

          <div class="form-actions text-center">
            <%= f.button :submit, t(".resend_confirmation_instructions"), class:"margin-bottom-small" %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
