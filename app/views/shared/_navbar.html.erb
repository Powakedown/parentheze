<div class="navbar-wagon" id="top">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "http://res.cloudinary.com/doodlid/image/upload/v1518450098/parentheze/Parentheze_logo.svg" %>
  <% end %>

  <div class="navbar-wagon-right hidden-xs">
      <%= link_to t('metas.titles.why'), pourquoi_parentheze_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t('navbar.plans'), "/home#slide2", class: "navbar-wagon-item navbar-wagon-link" %>
      <% if @session_ways %>
        <% if user_signed_in? %>
          <%= link_to t('navbar.sign_out'), destroy_user_session_path,  method: :delete %>
        <% else %>
          <%= link_to t('navbar.sign_in'), new_user_session_path %>
        <% end %>
      <% end %>
  </div>

  <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to t('metas.titles.why'), pourquoi_parentheze_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to t('navbar.plans'), "/home#slide2" %></li>
      </ul>
    </div>
  </div>
</div>

