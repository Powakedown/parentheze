<%= simple_form_for :message, url: content[:url], method: :get do |f| %>
  <%= f.input :comment, label: false, id: "textarea", as: :text, :input_html => { cols: content[:cols],
                                                                                  rows: content[:rows],
                                                                                  placeholder: content[:placeholder],
                                                                                  resize: "none",
                                                                                  value: session[:contact_comment] || "" } %>
  <%= f.button :submit, value: t('commons.button.send'), data: { disable_with: "" }, class:"btn btn-yellow" %>
<% end %>
