<% if notice %>
  <div class="alert alert-dismissible" role="alert">
    <div class="alert-info"></div>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-dismissible slideLeft-nobounce fade in" role="alert">
    <div class="alert-warning flexbox">
      <i class="fa fa-exclamation-triangle bigEntrance withdelay" aria-hidden="true"></i>
    </div>
    <div class="alert-message">
      <%= alert %>
    </div>
    <div type="button" class="alert-close-warning" data-dismiss="alert" aria-label="close"><i class="fa fa-times" aria-hidden="true"></i></div>
  </div>
<% end %>
