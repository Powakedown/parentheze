<div class="form-fake-wrap flex-vertical d-none d-sm-block">
  <%= simple_form_for query.to_sym, url: url , method: method.to_sym do |f| %>
      <%= f.input subquery, label: false, placeholder: placeholder, class:"input-with-picto" %>
      <%= f.button :submit, class: 'btn btn-green', id: "button-search", data: { disable_with: "recherche..." }, value: btn_text %>
  <% end %>
</div>
