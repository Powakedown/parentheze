<%= link_to(content_tag(:i, nil, class: 'fa', id:'pastille'), root_path, class: "pastille pastille-yellow flexbox" ) %>

<%= content_for :after_js do %>
  <script>
    function hand() {
      var a;
      a = document.getElementById("pastille");
      a.innerHTML = "&#xf25a;";
      setTimeout(function () {
          a.innerHTML = "&#xf1ae;";
        }, 1500);
      setTimeout(function () {
          a.innerHTML = "&#xf000;";
        }, 2000);
      setTimeout(function () {
          a.innerHTML = "&#xf0f4;";
        }, 2500);
    }
    hand();
    setInterval(hand, 3000);
  </script>
<% end %>
