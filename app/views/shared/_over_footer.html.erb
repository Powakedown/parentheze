<div class="over-footer text-center">
  <h4 class="margin-bottom-medium"><%= t('.title') %></h4>
  <div class="over-footer-form black-on-white center margin-bottom-medium" id="over-footer">
      <%= simple_form_for :message, url: mini_contact_path, method: :get do |f| %>
        <%= f.input :comment, label: false, id: "textarea", as: :text, :input_html => { cols: 5,
                                                                                        rows: 3,
                                                                                        placeholder: t('.placeholder'),
                                                                                        resize: "none",
                                                                                        value: session[:contact_comment] || "" } %>
        <%= f.button :submit, value: t('commons.button.send'), data: { disable_with: "" }, class:"over-footer-button" %>
      <% end %>
  </div>
  <div class="footer-line-dark"></div>
  <div class="footer-line-light"></div>
</div>
